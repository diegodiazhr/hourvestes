
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    match /users/{userId} {
      // Allow users to read their own profile
      allow read: if request.auth != null;
      // Allow users to create their own profile document
      allow create: if request.auth.uid == userId;
      // Allow users to update their own profile
      allow update: if request.auth.uid == userId;
      // Disallow deleting user profiles
      allow delete: if false;
    }

    // Schools Collection
    match /schools/{schoolId} {
      // Anyone authenticated can read school settings
      allow read: if request.auth != null;
      // Only the designated admin teacher or a general admin can write/update school settings
      allow write: if request.auth.uid == resource.data.adminTeacherId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Administrador';
    }

    // Projects Collection
    match /projects/{projectId} {
      // Allow read if user is the owner
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teacherId == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Administrador');
      // Allow create if user is authenticated and the project belongs to them
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Allow update if the user is the owner
      allow update: if request.auth.uid == resource.data.userId;
      // Allow delete if user is the owner
      allow delete: if request.auth.uid == resource.data.userId;
    }

    // Classes Collection
    match /classes/{classId} {
      // Allow read for the teacher of the class or an admin
      allow read: if request.auth != null;
      // Allow teacher to create a class
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Profesor';
      // Allow teacher to update their own class
      allow update, delete: if request.auth.uid == resource.data.teacherId;
    }
  }
}
