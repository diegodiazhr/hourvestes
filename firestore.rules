
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users Collection
    match /users/{userId} {
      // Any authenticated user can read user profiles.
      // Needed for teachers to see student info.
      allow read: if request.auth != null;
      // Only the user themselves can create or update their own profile.
      allow create, update: if request.auth.uid == userId;
    }

    // Projects Collection
    match /projects/{projectId} {
      // Any authenticated user can create a project.
      allow create: if request.auth != null;
      // Only the user associated with a project can read or update it.
      allow read, update: if request.auth.uid == resource.data.userId;
    }
  }
}
