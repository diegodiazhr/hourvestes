{
  "rules": {
    "projects": {
      "$projectId": {
        ".read": "request.auth != null && request.auth.uid == resource.data.userId",
        ".write": "request.auth != null && request.auth.uid == resource.data.userId",
        ".create": "request.auth != null && request.auth.uid == request.resource.data.userId"
      }
    },
    "users": {
      "$userId": {
        ".read": "request.auth != null && request.auth.uid == userId",
        ".write": "request.auth != null && request.auth.uid == userId"
      }
    }
  }
}