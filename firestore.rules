rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getRole() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isStudent() {
        return getRole() == 'Alumno';
    }

    function isTeacher() {
        return getRole() == 'Profesor';
    }

    function isAdmin() {
        return getRole() == 'Administrador';
    }

    // Allow users to read and write their own profile
    match /users/{userId} {
      allow read, create;
      allow update: if isOwner(userId) || isAdmin();
    }
    
    // School settings can be read by anyone, but only updated by assigned teachers or admins
    match /schools/{schoolId} {
        allow read;
        allow write: if isTeacher() || isAdmin();
    }

    // Projects can be created/read/updated by the student owner
    // Teachers can read student projects
    match /projects/{projectId} {
      allow create, update: if isOwner(request.resource.data.userId);
      allow read: if isOwner(resource.data.userId) || isTeacher() || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Classes can be created/managed by teachers
    // Students can only read classes they are a part of
    match /classes/{classId} {
        allow create: if isTeacher();
        allow read: if isSignedIn();
        allow update: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }
  }
}
