
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if request.auth != null; // Permite leer si el usuario est√° autenticado.
      allow write: if request.auth.uid == userId; // Solo el propio usuario puede escribir en su perfil.
    }

    match /projects/{projectId} {
      allow create: if request.auth.uid == request.resource.data.userId && exists(/databases/$(database)/documents/users/$(request.auth.uid));
      allow read, update: if request.auth.uid == resource.data.userId;
      allow delete: if false; // Por seguridad, nadie puede borrar proyectos directamente.
    }
  }
}
