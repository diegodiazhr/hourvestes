rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /projects/{projectId} {
      allow read, create, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /classes/{classId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.teacherId == request.auth.uid;
    }

    // A teacher can read the profile of their own students
    match /users/{studentId} {
      allow read: if isSignedIn() && get(/databases/$(database)/documents/users/$(studentId)).data.teacherId == request.auth.uid;
    }

    // A teacher can manage their own school's settings
    match /schools/{schoolId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/schools/$(schoolId)).data.adminTeacherId
                   || (isSignedIn() && !exists(/databases/$(database)/documents/schools/$(schoolId)));
    }
  }
}
